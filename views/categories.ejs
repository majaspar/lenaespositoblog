<div class="categories mt4 mb2">
    <h1 class="mb2 uppercase ff-title">Posts by Category</h1>

    <div class="categories__list grid mt2 mb2">

        <% if( categories !='' ) { %>

            <% categories.forEach(function(category, index){%>

                <a href="#category__<%= category.searchBy%>"><button class="shadow-light categories__button">
                        <%= category.name %>
                    </button></a>
                <% }) %>

                    <% } %>
    </div>

    <!-- Categories -->
    <div id="results" class="grid mt4">

        <h2 class="mb2  uppercase ff-title" id="category__javascript">JavaScript</h2>
        <ul class="article-ul grid">
            <% if(typeof allCategories.javascript !=='undefined' && allCategories.javascript.length> 0) { %>
                <% allCategories.javascript.forEach(function(post, index) { %>

                    <li>
                        <div class="shadow blog-entry background-white">
                            <a href="/post/<%=post._id %>">
                                <figure><img src="/<%=post.image %>" alt="Illustration for <%=post.title %>"></figure>
                            </a>
                            <div class="date-readmore flex">
                                <span class="entry-date">
                                    <%= post.createdAt.toDateString() %>
                                </span>
                                <div class="read-more-btn"><a href="/post/<%=post._id %>">Read more</a></div>
                            </div>

                            <a class="flex-align" href="/post/<%=post._id %>">
                                <h2 class="blog-entry-title flex">
                                    <%= post.title %>
                                </h2>
                            </a>
                            <div class="tags-entry">

                                <% for( let i=0; i < post.tags.length; i++ ) { %>
                                    <a href="/categories"><button class="no-btn tags-entry-tag">
                                            <%=post.tags[i]%>
                                        </button> </a>
                                    <% } %>

                            </div>
                        </div>
                    </li>

                    <% }) %>
                        <% }%>
        </ul>

    </div>
